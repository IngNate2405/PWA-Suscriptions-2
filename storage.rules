rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Reglas para iconos de suscripciones
    match /subscription-icons/{userId}/{allPaths=**} {
      // Permitir lectura y escritura solo al usuario autenticado propietario
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas por defecto: denegar todo lo dem√°s
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

