rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para los datos de usuarios
    match /users/{userId} {
      // Permitir lectura y escritura solo al usuario autenticado propietario
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Subcolección de iconos de suscripciones
      match /subscription_icons/{iconId} {
        // Permitir lectura y escritura solo al usuario autenticado propietario
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Permitir acceso a otras colecciones si es necesario (ajustar según necesidades)
    // Por ahora, denegar todo lo demás
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

